}

boundaryLayers
{
  patchBoundaryLayers
  {
    "(walls|bottom|outlet)"
    {
      nLayers 3;
      thicknessRatio 1.0;
      maxFirstLayerThickness 0.0015;
      // allowDiscontinuity 0;
    }
  }
}

