FoamFile
{
  version   2.0;
  format    ascii;
  class     dictionary;
  location  "system";
  object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "meshdata"

N 1;

surfaceFile "K-Site.stl";

maxCellSize $bulk_cell_size;

B $y_outlet;

A $interface_radius;

boundaryCellSize $maxCellSize;

// minCellSize 0.015;

localRefinement
{
  // ".*"
  // {
  //   additionalRefinementLevels 1;
  // }
  // pipe
  // {
  //   additionalRefinementLevels $N;
  // }
  "(walls|bottom)"
  {
    additionalRefinementLevels $N;
  }
  outlet
  {
    additionalRefinementLevels #eval {$N + 0};
    // refinementThickness $bulk_cell_size;
  }
}
//
  objectRefinements
{
  outlet
  {
    additionalRefinementLevels 2;
    type box;
    centre (0 $B  0);
    lengthX #eval {2*$outlet_radius};
    lengthY #eval {$bulk_cell_size};
    lengthZ #eval {2*$outlet_radius};
    // radius 0.04;
  }
  corner1
  {
    additionalRefinementLevels 1;
    type hollowCone;
    p0 (0 -1e6 0);
    p1 (0 1e6 0);
    radius0_Inner #eval {$A - 3*$bulk_cell_size};
    radius1_Inner $radius0_Inner;
    radius0_Outer 1e6;
    radius1_Outer $radius0_Outer;
  }
  corner2
  {
    additionalRefinementLevels $N;
    type hollowCone;
    p0 (0 -1e6 0);
    p1 (0 1e6 0);
    radius0_Inner #eval {$A - 2*$bulk_cell_size};
    radius1_Inner $radius0_Inner;
    radius0_Outer 1e6;
    radius1_Outer $radius0_Outer;
  }
  cone1
  {
    additionalRefinementLevels 1;
    type cone;
    p0 (0 #eval {$B - 3*$bulk_cell_size} 0);
    p1 (0 1e6 0);
    radius0 1e6;
    radius1 1e6;
  }
  cone2
  {
    additionalRefinementLevels $N;
    type cone;
    p0 (0 #eval {$B - 2*$bulk_cell_size} 0);
    p1 (0 1e6 0);
    radius0 1e6;
    radius1 1e6;
  }
  axisLine
  {
    type line;
    additionalRefinementLevels $N;
    p0 (0 -1e6 0);
    p1 (0 1e6 0);
    // refinementThickness 0.02;
  }
}

